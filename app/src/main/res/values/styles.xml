<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/leaf</item>
        <item name="colorPrimaryDark">@color/leaf</item>
        <item name="colorAccent">@color/turtle_green</item>
    </style>
    <style name="Text_Splash_load" >
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>
    
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/leaf</item>
        <item name="colorPrimaryDark">@color/leaf</item>
        <item name="colorAccent">@color/turtle_green</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/leaf</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="TextTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/turtle_green</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/leaf</item>
        <item name="android:textColorSecondary">@color/black_40</item>
    </style>

</resources>
